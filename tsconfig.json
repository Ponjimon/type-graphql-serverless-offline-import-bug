{
    "compilerOptions": {
      "target": "esnext",
      "module": "commonjs",
      "lib": [
        "esnext"
      ],
      "moduleResolution": "node",
      "noUnusedLocals": false,
      "noUnusedParameters": false,
      "sourceMap": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "esModuleInterop": true
    },
    "include": [
      "src",
      "typings/**/*"
    ],
    "exclude": [
      "node_modules"
    ]
  }
